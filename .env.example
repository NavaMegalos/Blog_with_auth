# .env.example

# SECRET_KEY para Django (esto es solo un ejemplo, cámbialo antes de usarlo)
SECRET_KEY=django-insecure-<tu-secreto-aqui>

# Configuración de la base de datos PostgreSQL
DB_NAME=blog_db          # Nombre de la base de datos
DB_USER=blog_user        # Usuario de la base de datos
DB_PASSWORD=blogpass123  # Contraseña del usuario de la base de datos
DB_HOST=localhost        # Dirección del servidor de base de datos
DB_PORT=5432            # Puerto de PostgreSQL (5432 es el predeterminado)

# Otros ejemplos de configuración de Django:
DEBUG=True               # Si está en desarrollo, True; en producción, False
ALLOWED_HOSTS=127.0.0.1, .localhost   # Define los hosts permitidos

# URL de inicio de sesión para Django
LOGIN_URL=blog:login    # Define la URL de login
